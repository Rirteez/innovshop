{% extends 'base.html.twig' %}

{% block title %}InnovShop - {{ article.title }}{% endblock %}

{% block body %}
    <div class="container">

        <p>Ici il y aura un fil d'ariane</p>

        <div class="row">


            <div class="images-article col-2">
                <img src="/images/uploads/{{ article.images[0] }}" alt="">
                <div class="selector-images">
                    {% for image in article.images %}
                        <img class="select-image" src="/images/uploads/{{ image }}" alt="">
                    {% endfor %}
                </div>
            </div>




            <div class="content-article col-2">
                <h2>{{ article.title }}</h2>
                <p>{{ article.description | raw }}</p>

                <p>{{ article.price }} â‚¬</p>

                <h4>Coloris disponibles</h4>
                <form action="">
                    <select name="" id="">
                        {% for color in article.colors %}
                            <option value="{{ color }}">{{ color }}</option>
                        {% endfor %}
                    </select>
                </form>
            </div>
        </div>

        <p>{{ article.descriptionDetail | raw }}</p>



    </div>

{% endblock %}
